{
  "name": "pyx-log",
  "version": "1.0.0",
  "description": "Simple and pretty logging",
  "main": "index.js",
  "scripts": {
    "test": "mocha -b",
    "analyze-coverage": "istanbul cover _mocha ./index.js -- -u exports -R spec test",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "coverage": "npm run analyze-coverage && npm run check-coverage",
    "cover": "npm run coverage; http-server ./coverage/lcov-report/",
    "dev-docs": "npm run compile-docs && http-server docs/",
    "codacy-cover": "istanbul cover _mocha --dir $CIRCLE_ARTIFACTS --report lcovonly -- -R spec && cat ./$CIRCLE_ARTIFACTS/lcov.info | ./node_modules/.bin/codacy-coverage",
    "compile-docs": "./node_modules/.bin/jsdoc -R README.md -t node_modules/jaguarjs-jsdoc/ -c jsdoc-config.json -a all -d docs index.js",
    "lint": "./node_modules/eslint/bin/eslint.js ./index.js"
  },
  "author": "Alan Tirado <alan@pyxidis.io>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.1.3"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "codacy-coverage": "^2.0.0",
    "eslint": "^3.9.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "jaguarjs-jsdoc": "^1.0.1",
    "jsdoc": "^3.4.2",
    "mocha-lcov-reporter": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boxman0617/pyx-log.git"
  }
}
